<script src="~/lib/easymde/dist/easymde.min.js"></script>
<script>

	if (document.getElementsByTagName("textarea").length) {

		window.easymde = new EasyMDE(
			{
				autoDownloadFontAwesome: false,
				insertTexts: {
					link: ["[", "](some wiki page)"]
				},
				toolbar: [
					"bold",
					"italic",
					"strikethrough",
					"heading",
					"|",
					"quote",
					"unordered-list",
					"ordered-list",
					"|",
					"link",
					"image",
					"|",
					"code",
					"table",
					"horizontal-rule",
					"|",
					"preview",
					"side-by-side",
					"fullscreen",
					"|",
					"guide"
				]
			}
		);
	}



	var openFile = function (event) {
		const input = event.target;

		const reader = new FileReader();
		reader.onload = function () {
			let text = easymde.value();

			text += `\n${reader.result}`;
			easymde.value(text);
		};
		reader.readAsText(input.files[0]);
	};
</script>
